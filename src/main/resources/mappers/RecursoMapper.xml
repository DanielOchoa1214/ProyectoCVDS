<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.proyectoCVDS.persistence.mybatisimpl.mappers.RecursoMapper">

    <resultMap type='Recurso' id='RecursoResult'>
        <id property='id' column='id'/>
        <result property='name' column='name'/>
        <result property='location' column='location'/>
        <result property='type' column='type'/>
        <result property='capacity' column='capacity'/>
        <result property='bookingScheduleStart' column='booking_schedule_start'/>
        <result property='bookingScheduleEnd' column='booking_schedule_end'/>
    </resultMap>

    <insert id="setNewRecurso">
        insert into Recurso (name, location, type, capacity, id, booking_schedule_start, booking_schedule_end)
        values (#{name}, #{location}, #{type}, #{capacity}, #{id}, #{bookingScheduleStart}, #{bookingScheduleEnd})
    </insert>
</mapper>